{
  "name": "zwift-widgets",
  "version": "0.1.0",
  "description": "Overlay utility for adding extra information to the Zwift UI",
  "build": {
    "appId": "amd.zwift_widgets"
  },
  "main": "src/App.ts",
  "scripts": {
    "lint": "eslint src",
    "build": "webpack",
    "start": "yarn build --mode=development && electron ./out/app.js",
    "restart": "electron ./out/app.js",
    "pack": "electron-builder --dir",
    "dist": "yarn build --mode=production && electron-builder"
  },
  "postinstall": "electron-builder install-app-deps",
  "author": "",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@types/electron-store": "^3.2.0",
    "@types/ip": "^1.1.0",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "css-loader": "^3.5.3",
    "electron": "^8.2.5",
    "electron-builder": "^22.6.0",
    "eslint": "^7.0.0",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-loader": "^0.6.0",
    "ts-loader": "^7.0.3",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "cap": "^0.2.1",
    "electron-store": "^5.1.1",
    "ip": "^1.1.5",
    "protobufjs": "^6.9.0"
  }
